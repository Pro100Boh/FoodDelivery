<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="FoodDeliveryMobileApp.Views.LogInPage"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Authorization" FontSize="Large"
                HorizontalOptions="CenterAndExpand" VerticalOptions="Start" 
                   HeightRequest="50" Margin="10,17,10,10"/>

            <Entry Placeholder="Email" Visual="Material" HorizontalOptions="FillAndExpand" 
                   FontSize="Medium" HeightRequest="50" Margin="17,10,17,7"/>
            <Entry IsPassword="true" Visual="Material" HorizontalOptions="FillAndExpand" Placeholder="Password" 
                   FontSize="Medium" HeightRequest="50" Margin="17,10,17,13"/>

            <Button BackgroundColor="#D41A1D" TextColor="White" Text="Sign in" FontSize="Medium" FontAttributes="Bold" 
                    Margin="17,7,17,5" CornerRadius="10" HorizontalOptions="FillAndExpand" Clicked="LogInClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>